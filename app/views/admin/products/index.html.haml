#admin_header
  .admin_secondary_links
    %ul
      %li
        = link_to new_admin_product_path do
          %i.fa.fa-plus
          New Product
  %h1 Listing Products

#admin_table

  %table
    %thead
      %tr
        %th Name
        %th Price
        %th Categories
        %th
        %th
        %th

    %tbody
      - @products.each do |product|
        %tr
          %td= product.name
          %td= number_to_currency product.price, locale: :en
          %td
            - product.categories.each do |c| 
              = link_to c.name, c
          %td= link_to 'Show', product
          %td= link_to 'Edit', [:edit, :admin, product]
          %td= link_to 'Destroy', [:admin, product], :method => :delete, :data => { :confirm => 'Are you sure?' }
