.split_form
  .split_form_left
    .field
      = f.label :name
      = f.text_field :name
    .field
      = f.label :subdomain
      = f.text_field :subdomain

  .split_form_right
    .field
      = f.label :color
      .colorpicker
      = f.hidden_field :color, class: "color_picker_reciever"
    .field.image_field
      = image_tag(@site.logo) if @site.logo
      = f.label :logo
      = f.file_field :logo
