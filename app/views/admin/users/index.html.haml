#admin_header
  .admin_secondary_links
    %ul
      %li
        = link_to new_admin_user_path do
          %i.fa.fa-plus
          New User
  %h1 Listing users

#admin_table
  %table
    %thead
      %tr
        %th Name
        %th Email
        %th
        %th
        %th

    %tbody
      - @users.each do |user|
        %tr{class: cycle("odd", "even")}
          %td= user.name
          %td= user.email
          %td.admin_index_action= link_to 'Profile', user
          %td.admin_index_action= link_to 'Edit', edit_admin_user_path(user)
          %td.admin_index_action= link_to 'Delete', [:admin, user], :method => :delete, :data => { :confirm => 'Are you sure?' }
