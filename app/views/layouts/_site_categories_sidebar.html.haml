%h2.side_menu_heading Categories
%ul#side_menu_list
  - current_site.side_menu_items.each do |menu|
    - if menu.page
      %li= link_to menu.name, menu.page
    - else
      %li= link_to menu.name, "/#{menu.path}"
  - site_categories.each do |category|
    %li= link_to category.name, category

- if current_site.brands.any?
  %h2.side_menu_heading Brands
  %ul#side_menu_list
    - current_site.brands.select("categories.id", "brands.id", "brands.name").group("categories.id", :name).each do |brand|
      %li= link_to brand.name, brand
   